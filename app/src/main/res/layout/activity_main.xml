<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background2">

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="12dp"
        android:id="@+id/procedure_id"
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/blue"
        android:text="Procedure"
        android:onClick="OpenProcedure"
        app:iconTint="#872C2C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="12dp"
        android:id="@+id/knowledge_id"
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/blue"
        android:text="Knowledge"
        android:onClick="OpenKnowledge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/procedure_id" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="12dp"
        android:id="@+id/Videos_id"
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/blue"
        android:text="Videos"
        android:onClick="OpenVideos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knowledge_id" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="12dp"
        android:id="@+id/facts_id"
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/blue"
        android:text="Facts"
        android:onClick="OpenFacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Videos_id" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="12dp"
        android:id="@+id/help_id"
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/blue"
        android:text="help"
        android:onClick="OpenHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facts_id" />
</androidx.constraintlayout.widget.ConstraintLayout>